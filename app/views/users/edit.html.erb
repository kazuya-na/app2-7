<p id="notice"></p>
<% if @user.errors.any? %>
 <ul class="alert alert-danger" role="alert">
  <h6 class="alert-heading">
   <%= @user.errors.count %> errors prohibited this obj from being saved:
  </h6>
  <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
  <%= form_with model: @user do |f| %>
   <h2>User info</h2>
   <div class="form-group">
   <label for="book_title">Name</label>
    <%= f.text_field :name, class: "form-control" %>
   </div>
   <div class="form-group">
    <label for="book_image">Image</label><br>
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
   </div>
   <div class="form-group">
   <label for="book_introduction">Introduction</label>
    <%= f.text_area :introduction, class: "form-control", row:"3" %>
   </div>
   <div class="form-group">
    <%= f.submit 'Update User', class: "btn btn-secondary" %>
   </div>
   <% end %>
  </div>
 </div>
</div>